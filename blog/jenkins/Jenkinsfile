pipeline {
    agent any
    environment {
        RELEASE = "automated CI"
    }
    stages {
        stage('Checkout') {
            steps {
            checkout scm
        }

         stage('Setup') {
            steps {
                script {
                    bat  """
                    ./venv/Scripts/activate
                    pip install -r requirements.txt """
                    }
                }
            }
        stage('MYPY-Test') {
            steps{
            script{
                try{
            bat """ python -m mypy blog """  // failure
            }
            catch(err ){
                echo err.getMessage()
                    }
                }
            }
        }
         stage('Flask-run') {
            steps {
                script {
                     bat  """python run.py
                     """
                }
            }
        }
    }
}
